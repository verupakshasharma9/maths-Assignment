import java.util.*;
class Pow
{
   public static void main(String []a)
   {
       Scanner s=new Scanner(System.in);
       System.out.println("Enter a number");
       int n=s.nextInt();
       int p=0;
       for(int i=1;i<=n;i++)
       {
           p+=Math.pow((2*i),2);
       }
          System.out.println(p);

   }
}
